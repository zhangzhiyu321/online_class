<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzy.backend.mapper.common.CommonMapper">

    <!-- 教学阶段结果映射 -->
    <resultMap id="TeachingStageResultMap" type="com.zzy.backend.dto.response.common.TeachingStageResponse">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="sortOrder" column="sort_order"/>
    </resultMap>

    <!-- 科目结果映射 -->
    <resultMap id="SubjectResultMap" type="com.zzy.backend.dto.response.common.SubjectResponse">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="category" column="category"/>
        <result property="sortOrder" column="sort_order"/>
    </resultMap>

    <!-- 查询所有启用的教学阶段列表 -->
    <select id="selectTeachingStages" resultMap="TeachingStageResultMap">
        SELECT
            id,
            code,
            name,
            sort_order
        FROM teaching_stages
        WHERE status = 1
        AND deleted_at IS NULL
        ORDER BY sort_order ASC, id ASC
    </select>

    <!-- 查询所有启用的科目列表 -->
    <select id="selectSubjects" resultMap="SubjectResultMap">
        SELECT
            id,
            code,
            name,
            category,
            sort_order
        FROM subjects
        WHERE status = 1
        AND deleted_at IS NULL
        ORDER BY sort_order ASC, id ASC
    </select>

</mapper>

